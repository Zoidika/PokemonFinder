@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Pokemon Finder</h1>
    <p>Learn about <a href="www.wikipedia.com/pokemon">Pokemon Here!</a>.</p>
</div>


<div>
    <form method="post">
    <label>Search for a pokemon using their Pokedex Id or Name</label>
    <input type="text" asp-for="SearchedID" />
    <button type="submit" asp-page-handler="">Submit search</button>

    @if(Model.Pokemon != null)
{
<div>
    
    <h1>@Model.Pokemon.Name</h1>
    @if(!Model.IsShiny){
                <img src="@Model.Pokemon.Sprites.Front_default" />
                <img src="@Model.Pokemon.Sprites.Back_default" />
    }
    else {
                <img src="@Model.Pokemon.Sprites.Front_shiny" />
                <img src="@Model.Pokemon.Sprites.Back_shiny" />
    }
    <button type="submit" asp-page-handler="Shiny">Toggle Shiny</button>
                @* <button type="submit" asp-page-handler="Next">Next</button>
                <button type="submit" asp-page-handler="Previous">Previous</button> *@
</div>
}
    </form>
</div>

